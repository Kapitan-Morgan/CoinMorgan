<!-- views/layout.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Sinatra Blog</title>
	<link rel="stylesheet" href="css/style.css">
</head>
<body>
	<div class="container">
 <ul>
   <li><a href="/">Home</a></li>
   <% unless @user.nil? %>
   	<li><a href="/users/home"><%= @user.name %></a></li>
   	<li><a href="/sessions/logout">Log Out</a></li>
   	<li><a href="/create">create Post</a></li>
   	<li><a href="/posts/show">Show posts</a></li>
   <% else %>
   	<li><a href="/registrations/signup">Sign up</a></li>
   	<li><a href="/sessions/login">Log In</a></li>
   <% end %>
 </ul>
 <%= yield %>
</div>
</body>
</html>